{
  "manifest_version": 2,
  "name": "GCP project theme changer",
  "version": "0.0.1",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://console.cloud.google.com/*"],
      "js": ["/src/observer.js", "/src/storage.js", "/colorify.js"]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "/icon.png"
    },
    "default_title": "GCP project theme changer",
    "default_popup": "/src/pages/popup.html"
  }
}
